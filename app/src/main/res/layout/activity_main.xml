<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#202732"
        tools:context=".MainActivity">
    <ImageButton
            android:background="@drawable/button_social"
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/icono_twitter_01"
            android:id="@+id/imageButton3"
            android:scaleType="fitCenter" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton2"/>
    <ImageButton
            android:background="@drawable/button_social"
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/icono_facebook_01"
            android:id="@+id/imageButton2"
            android:scaleType="fitCenter" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Register"
            android:background="@drawable/button_rounded_border"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button2" android:layout_marginEnd="32dp" android:layout_marginStart="32dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@drawable/inventario_01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Email"
            android:backgroundTint="@color/colorPrimaryDark"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/editText" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Password"
            android:backgroundTint="@color/colorPrimaryDark"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/editText2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>
    <Button
            android:text="Login"
            android:background="@drawable/button_rounded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button" android:layout_marginEnd="32dp" android:layout_marginStart="32dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/editText2"/>
    <ImageButton
            android:background="@drawable/button_social"
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/icono_instagram_01"
            android:id="@+id/imageButton"
            android:scaleType="fitCenter" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintStart_toEndOf="@+id/imageButton2"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>